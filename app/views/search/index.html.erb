<h1 class="text-center"><%= pluralize(@posts.count, 'Result')%></h1>
<%= render 'search/form' %>

<div class="container px-0 py-3">
  <table class="table table-dark table-striped">
    <thead>
      <tr>
        <th><%= sort_link(@query, :title, 'Title', default_order: :asc) %></th>
        <th><%= sort_link(@query, :body, 'Blog Content') %></th>
        <th><%= sort_link(@query, :user_name, 'Users') %></th>
      </tr>
    </thead>
    
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= link_to post.title, post, class: 'text-white' %></td>
          <td><%= truncate(post.body.to_plain_text, length: 25, omission: '...') %></td>
          <td><%= link_to post.user.name, post.user, class: 'text-white' %></td>
        </tr>
      <% end %>
    </tbody>
    
  </table>
</div>